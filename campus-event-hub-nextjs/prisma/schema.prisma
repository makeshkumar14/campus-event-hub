generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum ROLES {
  STUDENT
  ADMIN
  CLUB_LEAD
}

model Club {
  id          Int      @id @default(autoincrement())
  name        String
  category    String?
  description String?
  logo        String?
  email       String?
  phone       String?
  advisor     String?
  instagram   String?
  linkedin    String?
  website     String?
  xp          Int      @default(0)
  createdAt   DateTime @default(now())
  events      Event[]
}

model Event {
  id           Int       @id @default(autoincrement())
  title        String
  date         DateTime
  time         String?
  duration     String?
  category     String
  clubId       Int
  club         Club      @relation(fields: [clubId], references: [id])
  venue        String
  capacity     Int?
  deadline     DateTime?
  description  String
  image        String?
  organizer    String?
  orgEmail     String?
  requirements String?
  highlights   String?
  createdAt    DateTime  @default(now())
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  image     String?
  role      ROLES    @default(STUDENT)
  createdAt DateTime @default(now())

  accounts Account[]
  sessions Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  access_token      String?
  refresh_token     String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

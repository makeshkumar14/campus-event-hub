generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  image     String?
  role      ROLES    @default(STUDENT)
  createdAt DateTime @default(now())
}

enum ROLES {
  STUDENT
  ADMIN
  CLUB_LEAD
}

model Club {
  id     Int     @id @default(autoincrement())
  name   String
  xp     Int     @default(0)
  avatar String?
  events Event[]
}

model Event {
  id          Int      @id @default(autoincrement())
  title       String
  date        DateTime
  category    String
  clubId      Int
  club        Club     @relation(fields: [clubId], references: [id])
  venue       String
  description String
  image       String?
}
